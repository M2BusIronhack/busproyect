

        <div class="container text-center text-color-profile">
            <div class="profile-name">
                <h3>{{user.username}}</h3>
            </div>
            
            <div class="profile-img">
                <img class="rounded-circle" src="{{user.img}}"  />
            </div>
            <div class="col-sm-12">
                 {{#if comments}}
                     <h1>COMMENT</h1>
                     {{#each comments}}
                        <p>CONTENT: {{this.title}} </p>
                        <p>{{this.commentBody}} </p>
                        <button type="button" class="btn btn-light btn-margin btn-block btn-text-color">
                            <a href="/comment/delete/{{this._id}}">DELETE</a>
                        </button>
                     {{/each}} 
                     {{else}}
                         <p> THERE ARE NOT COMMENTS</p>
                    {{/if}}
            </div>
          
            <div class="col-sm-12">
                <button type="button" class="btn btn-light btn-margin btn-block btn-text-color fixed-bottom">
                    <a href="/profile/{{user._id}}/edit">Edit Profile</a>
                </button>
            </div>
        </div>

 



















