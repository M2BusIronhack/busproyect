<!-- views/auth/signup.hbs -->
<div class="container text-center">

  <img src="/images/bus.svg" alt="icons-bus" class="img-bus img-bus-width" >

  <h2>Registro</h2>

  <form action="/auth/signup" method="POST" id="form-container">
    <div class="form-group">

      <input type="username" class="form-control-sm" id="username" name="username" aria-describedby="emailHelp" placeholder="Introduce tu nombre">
    </div>

    <div class="form-group">

      <input type="email" class="form-control-sm" id="email" name="email" aria-describedby="emailHelp" placeholder="Introduce tu email">
    </div>

    <div class="form-group">
      <input type="password" name="password" class="form-control-sm" id="password" placeholder="Elige tu contraseña">
    </div>

    <button type="submit" class="btn btn-info space-btn border border-info">Regístrate</button>

    <p class="account-message space-form color-text">
      ¿Ya tienes una cuenta?
    </p>
    <a class="btn btn-info out-line" href="/auth/login" role="button">Entrar</a>

  </form>